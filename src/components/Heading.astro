---
import { cva } from "class-variance-authority";
export type Props = {
  title: string;
  type: "h1" | "h2" | "h3";
};

const HeadingStyles = cva("", {
  variants: {
    type: {
      h1: "text-5xl font-medium",
      h2: "text-4xl font-medium tracking-wider",
      h3: "text-xl font-medium tracking-widest",
    },
  },
});

const { title, type } = Astro.props;
---

<h1 class={HeadingStyles({ type })}>{title}</h1>
